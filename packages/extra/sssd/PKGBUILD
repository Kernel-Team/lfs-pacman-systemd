#-*-mode:sh-*-
# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>
# Maintainer: Mantas M. <grawity@gmail.com>
# Contributor: alexforsale@yahoo.com
pkgname=sssd
pkgver=2.2.2
pkgrel=1
pkgdesc="System Security Services Daemon"
arch=('x86_64')
url="https://pagure.io/SSSD/sssd"
license=('GPL3')
depends=(
    'bind'          # for nsupdate
    'c-ares'
    'cyrus-sasl'
    'ding-libs'
    'libnl'
    'libunistring'
    'nss'
    'smbclient'     # for libndr-nbt
    'nfsidmap'
    'jansson'
)
makedepends=(
    'docbook-xsl'
    'doxygen'
    'python'
    'python2'
    'samba'         # for libndr-nbt headers
    'systemd'
)
source=("https://releases.pagure.org/SSSD/$pkgname/$pkgname-$pkgver.tar.gz"{,.asc})
sha512sums=('4cce8fdbcc05d1469dad5ba987cb0f9bc33702b37f85e8e248975461bb50b0740fec92ff213bdb640b506405be7ead936ff253ab02d4a27205ddf20cc0e54801'
            'SKIP')
validpgpkeys=('E4E366758CA0716AAB8048671EC6AB7532E7BC25'
              '16F24229488E736048952737BA88000FE6398272')

prepare() {
    cd "$srcdir/$pkgname-$pkgver"
    for f in "${source[@]}"; do
        if [[ $f == *.patch ]]; then
            msg2 "Applying $f"
            patch -p1 < "$srcdir/$f"
        fi
    done

    # dbus policy files in /usr/share/dbus-1
    sed -i -e 's/^dbuspolicydir = $(sysconfdir)/dbuspolicydir = $(datadir)/' Makefile.in

    ./configure \
        --prefix=/usr/local \
        --sysconfdir=/usr/local/etc \
        --localstatedir=/var \
        --libexecdir=/usr/local/lib/sssd \
        --datadir=/usr/local/share \
        --enable-pammoddir=/lib/security \
        --with-initscript=systemd \
        --with-os=fedora \
        --with-pid-path=/run \
        --with-python2-bindings \
        --with-python3-bindings \
        --with-syslog=journald \
        --without-selinux \
        --without-semanage \
        --with-systemdunitdir=/lib/systemd/system \
        ;
        sed -i '/\<HAVE_KRB5_SET_TRACE_CALLBACK\>/d' config.h
}

build() {
    cd "$srcdir/$pkgname-$pkgver"
        make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make -j1 DESTDIR="$pkgdir/" install
    rm -rf "$pkgdir"/etc/rc.d
    rm -rf "$pkgdir"/lib
    rm -rf "$pkgdir"/run
    rm -f "$pkgdir"/usr/lib/ldb/modules/ldb/memberof.la
    find "$pkgdir"/usr -depth -type d \
         -exec rmdir --ignore-fail-on-non-empty {} \;

    cd "$srcdir"
    rm -rf "$pkgdir/etc/systemd" # remove the drop-in

    sed '1 s/python$/python2/' -i "$pkgdir"/usr/local/sbin/sss_obfuscate

    install -vdm755 ${pkgdir}/etc/local
    mv -v ${pkgdir}/usr/local/etc/pam.d ${pkgdir}/etc
    rm -rfv ${pkgdir}/usr/local/etc

    install -vdm755 ${pkgdir}/usr/lib
    mv -v ${pkgdir}/usr/local/lib/python2.7 ${pkgdir}/usr/lib
    mv -v ${pkgdir}/usr/local/lib/python3.7 ${pkgdir}/usr/lib

    install -vdm755 ${pkgdir}/usr/share
    mv -v ${pkgdir}/usr/local/share/dbus-1 ${pkgdir}/usr/share
}
