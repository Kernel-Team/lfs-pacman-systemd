#-*-mode:sh-*-
# Maintainer: alexforsale@yahoo.com
pkgname=numactl
pkgver=2.0.13
pkgrel=1
pkgdesc="Simple NUMA policy support"
arch=('x86_64')
url="http://oss.sgi.com/projects/libnuma/"
license=('LGPL2.1' 'GPL2')
depends=('perl')
provides=('libnuma.so')
source=(https://github.com/numactl/numactl/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz)
groups=('extra')

prepare(){
    cd "$srcdir/$pkgname-${pkgver/_/-}"
    autoreconf -vfi
    ./configure --prefix=/usr/local
}

build() {
    cd "$srcdir/$pkgname-${pkgver/_/-}"
    make
}

package() {
    cd "$srcdir/$pkgname-${pkgver/_/-}"
    make DESTDIR="$pkgdir" install
    # move_pages(2) is provided by man-pages and is more up-to-date there anyway
    rm -rf "$pkgdir/usr/local/share/man/man2"
    install -vDm 644 README.md -t "${pkgdir}/usr/local/share/doc/${pkgname}"
}

md5sums=('9a9a94bfebf6c9c67defeedc9795e568')
