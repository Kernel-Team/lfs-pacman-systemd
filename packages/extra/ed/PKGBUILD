#-*-mode:sh-*-
# Maintainer: alexforsale@yahoo.com
pkgname=ed
pkgver=1.15
pkgrel=1
pkgdesc="A POSIX-compliant line-oriented text editor"
arch=('x86_64')
license=('GPL')
url="https://www.gnu.org/software/ed/ed.html"
groups=('extra')
depends=('glibc')
options=('!emptydirs')
validpgpkeys=('1D41C14B272A2219A739FA4F8FE99503132D7742')  # Antonio Diaz Diaz
source=("https://ftp.gnu.org/gnu/ed/$pkgname-$pkgver.tar.lz"{,.sig})
sha256sums=('ad4489c0ad7a108c514262da28e6c2a426946fb408a3977ef1ed34308bdfd174'
            'SKIP')

if [[ "$(pacman -Ss ^sh$ 2>/dev/null)" ]];then
    depends+=( 'sh')
else
    optdepends+=( 'sh')
fi

prepare(){
    cd $srcdir/$pkgname-$pkgver
    ./configure --prefix=/ \
                --bindir=/bin \
                --mandir=/usr/share/man \
                --infodir=/usr/share/info \
                "CPPFLAGS=$CPPFLAGS" \
                "CFLAGS=$CFLAGS" \
                "LDFLAGS=$LDFLAGS"
}

build() {
    cd $srcdir/$pkgname-$pkgver
    make 
}

check() {
    make -C "$pkgname-$pkgver" check
}

package() {
    make -C "$pkgname-$pkgver" "DESTDIR=$pkgdir" install
}
