[Trigger]
Type = File
Operation = Install
Operation = Upgrade
Target = usr/local/share/haskell/register/*.sh

[Action]
Description = Registering Haskell modules...
When = PostTransaction
Exec = /bin/sh -c 'while read -r f; do /bin/sh "/$f" >>/tmp/haskell-register.log 2>&1 ; done'
Depends = ghc-libs
NeedsTargets
