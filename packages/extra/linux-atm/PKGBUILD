#-*-mode:sh-*-
# Maintainer: alexforsale@yahoo.com
pkgname=linux-atm
pkgver=2.5.2
pkgrel=1
pkgdesc="Drivers and tools to support ATM networking under Linux."
arch=('x86_64')
depends=('glibc')
url="http://linux-atm.sourceforge.net/"
license=(GPL)
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz
        man-pages.patch remove-define-hacks.patch)
options=(!makeflags)
backups=('etc/local/atmsigd.conf'
         'etc/local/hosts.atm')
groups=('extra')

prepare(){
    cd "${srcdir}/${pkgname}-${pkgver}"
    patch -Np1 -i ../man-pages.patch
    patch -Np1 -i ../remove-define-hacks.patch

    ./configure --prefix=/usr/local --sysconfdir=/usr/local/etc
}

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install

    install -vdm755 ${pkgdir}/etc/local
    mv -v ${pkgdir}/usr/local/etc/* ${pkgdir}/etc/local
    rm -rfv ${pkgdir}/usr/local/etc
}

md5sums=('d49499368c3cf15f73a05d9bce8824a8'
         '181390736336cdb615ae32f1ae5acfa6'
         '74275ad95cef3898ef3ec52c21012e45')
