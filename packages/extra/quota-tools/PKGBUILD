#-*-mode:sh-*-
# Maintainer: alexforsale@yahoo.com
pkgname=quota-tools
pkgver=4.05
pkgrel=1
pkgdesc="Tools to manage kernel-level quotas in Linux"
arch=('x86_64')
url="http://sourceforge.net/projects/linuxquota/"
license=('GPL' 'BSD')
depends=(libnl dbus libtirpc)
makedepends=(rpcsvc-proto)
backup=('etc/local/warnquota.conf' 'etc/local/quotatab' 'etc/local/quotagrpadmins')
options=('!emptydirs')
source=(http://downloads.sourceforge.net/sourceforge/linuxquota/quota-${pkgver}.tar.gz)
groups=('extra')

build() {
    cd quota-$pkgver
    CFLAGS+=" -I/usr/include/tirpc/" ./configure --prefix=/usr/local --sysconfdir=/usr/local/etc
    make
}

package() {
    cd quota-$pkgver
    make DESTDIR="${pkgdir}" STRIP="" install
    install -d "${pkgdir}/usr/share/licenses/${pkgname}"
    head -33 quota.c > "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"

    # remove conflicts with glibc
    rm "${pkgdir}"/usr/local/include/rpcsvc/rquota.{h,x}

    install -vdm755 ${pkgdir}/etc/local
    mv -v ${pkgdir}/usr/local/etc/* ${pkgdir}/etc/local
    rm -rv ${pkgdir}/usr/local/etc
}

sha1sums=('d23711f3b204e0a86b8378c32545c95fb149168d')
