#-*-mode:sh-*-
# Maintainer: alexforsale@yahoo.com
pkgname=wget
pkgver=1.20.3
pkgrel=1
pkgdesc='Network utility to retrieve files from the Web'
url='https://www.gnu.org/software/wget/wget.html'
arch=('x86_64')
license=('GPL3')
depends=('glibc' 'libutil-linux')
_deps=('gnutls' 'libidn2' 'pcre' 'libpsl' 'zlib' 'c-ares' 'aria2'
       'libunistring' 'gpgme')
checkdepends=('python')
optdepends=('make-ca: HTTPS downloads')
backup=('etc/wgetrc')
source=(https://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.gz{,.sig})
validpgpkeys=('AC404C1C0BF735C63FF4D562263D6DF2E163E1EA'
              '7845120B07CBD8D6ECE5FF2B2A1743EDA91A35B6'
              '1CB27DBC98614B2D5841646D08302DB6A2670428') # Tim RÃ¼hsen <tim.ruehsen@gmx.de>
groups=('blfs' 'networking-programs')

for d in ${_deps[@]};do
    if [[ $(pacman -Ss ^"${d}$" 2>/dev/null) ]];then
        depends+=( "$d")
        pkgrel=$((pkgrel+1))
    else
        optdepends+=( "${d}: optional depends")
    fi
done

if [[ "$(pacman -Qq perl-http-daemon 2>/dev/null)" ]];then
    checkdepends+=( 'perl-http-daemon')
fi
if [[ "$(pacman -Qq perl-io-socket-ssl 2>/dev/null)" ]];then
    checkdepends+=( 'perl-io-socket-ssl')
fi

_confargs=()
if [[ $(pacman -Ss ^zlib$ 2>/dev/null) ]];then
    _confargs+=( '--with-zlib')
else
    _confargs+=( '--without-zlib')
fi
if [[ $(pacman -Ss ^libpsl$ 2>/dev/null) ]];then
    _confargs+=( '--with-libpsl')
else
    _confargs+=( '--without-libpsl')
fi
if [[ $(pacman -Ss ^c-ares$ 2>/dev/null) ]];then
    _confargs+=( '--with-cares')
else
    _confargs+=( '--without-cares')
fi
if [[ $(pacman -Ss ^gnutls$ 2>/dev/null) ]];then
    _confargs+=( ' --with-ssl=gnutls')
else
    _confargs+=( ' --with-ssl=openssl')
fi
if [[ $(pacman -Ss ^aria2$ 2>/dev/null) ]];then
    _confargs+=( ' --with-metalink')
else
    _confargs+=( ' --without-metalink')
fi
if [[ $(pacman -Ss ^libunistring$ 2>/dev/null) ]];then
    _confargs+=( ' --with-libunistring-prefix=/usr')
else
    _confargs+=( ' --with-included-libunistring')
fi
if [[ $(pacman -Ss ^libidn2$ 2>/dev/null) ]];then
    _confargs+=( ' --with-libidn=/usr')
fi
if [[ $(pacman -Ss ^gpgme$ 2>/dev/null) ]];then
    _confargs+=( ' --with-gpgme-prefix=/usr')
fi
if [[ $(pacman -Ss ^pcre$ 2>/dev/null) ]];then
    _confargs+=( ' --enable-pcre')
fi

prepare() {
    cd ${pkgname}-${pkgver}
    cat >> doc/sample.wgetrc <<EOF

# default root certs location
ca_certificate=/etc/ssl/ca-bundle.crt
EOF

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --with-ssl=openssl
}

build() {
    cd ${pkgname}-${pkgver}
    make
}

check() {
    cd ${pkgname}-${pkgver}
    make check < /dev/null
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}

md5sums=('db4e6dc7977cbddcd543b240079a4899'
         'SKIP')
